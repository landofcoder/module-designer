<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::designer_elements" title="Lof Designer">
                    <resource id="Lof_Designer::designer" title="Designers" sortOrder="10">
                        <resource id="Lof_Designer::designer_edit" title="Edit Designer" sortOrder="10" />
                        <resource id="Lof_Designer::designer_save" title="Save Designer" sortOrder="20" />
                        <resource id="Lof_Designer::designer_delete" title="Delete Designer" sortOrder="30" />
                    </resource>
                    <resource id="Lof_Designer::group" title="Groups" sortOrder="30">
                        <resource id="Lof_Designer::group_edit" title="Edit Group" sortOrder="10" />
                        <resource id="Lof_Designer::group_save" title="Save Group" sortOrder="20" />
                        <resource id="Lof_Designer::group_delete" title="Delete Group" sortOrder="30" />
                    </resource>
                    <resource id="Lof_Designer::import" title="Import Designers Products" sortOrder="40">
                        <resource id="Lof_Designer::import_products" title="Import" sortOrder="10" />
                        <resource id="Lof_Designer::import_save" title="Save" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_Designer::config_designer" title="Designer" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>